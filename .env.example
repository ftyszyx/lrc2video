# ============== LLM API 配置 ==============
# 选择 LLM 提供商: openai 或 claude
LLM_PROVIDER=openai

# OpenAI 配置
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# HuggingFace Token
HF_TOKEN=your-huggingface-token
HF_HOME=your-huggingface-home

# ============== 模型路径配置 ==============
# FLUX.1 模型 (留空则自动从 HuggingFace 下载)
# FLUX_MODEL_PATH=black-forest-labs/FLUX.1-dev

# ToonCrafter 模型路径
# TOONCRAFTER_MODEL_PATH=/path/to/tooncrafter

# DynamiCrafter 模型路径
# DYNAMICRAFTER_MODEL_PATH=/path/to/dynamicrafter

# SVD 模型
# SVD_MODEL_PATH=stabilityai/stable-video-diffusion-img2vid-xt

# RIFE 模型路径
# RIFE_MODEL_PATH=/path/to/rife

# ============== 其他配置 ==============
# 默认视频生成模型
DEFAULT_VIDEO_MODEL=tooncrafter

# GPU 设备
FLUX_DEVICE=cuda
